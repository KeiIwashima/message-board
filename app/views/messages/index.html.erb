<div class="panel panel-default">
  <div class="panel-heading">
<h1>メッセージ一覧</h1>
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
    <span class="label label-info"><%= message.name %></span>
    <%= message.body %>
     <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
　Name:
  <%= f.text_field :name %>
　
　Description：
　<%= f.text_area :body %>
　<%= f.submit %>
<% end %>
